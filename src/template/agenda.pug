extends layout/base.pug


block contenido
        .row.container.mt-2.mx-auto
            each error in errors
                    .alert.alert-danger.text-center(role='alert')= error

            each message in success
                .alert.alert-success.text-center(role='alert')= message
            
        .container-fluid.row
            .col-3
                .mt-4.p-3
                    h3 Formulario de Registro Contacto
        
                    form(id="formulario" autocomplete="off")
                        .mb-2
                            label(for="nombre").form-label Nombre:
                            input(type="text" name="nombre" placeholder="Coloca tu nombre." minlength="3" required value=`${dataContacto.nombre}`).form-control#nombre
                        .mb-2
                            label(for="telefono").form-label Telefono:
                            input(type="tel" name="telefono" placeholder="Coloca tu numero telefono." minlength="10" maxlength="10" value=`${dataContacto.telefono}` required).form-control#name
                        .mb-2
                            label(for="descripcion").form-label Descripcion:
                            textarea#descripcion(name="descripcion" cols="5" rows="2").form-control= `${dataContacto.descripcion}`
                        .mb-2
                            input(type="submit", value=`${dataContacto._id ? "Editar Contacto" : "Crear Contacto"}`).btn.btn-primary

            .col-9.pt-3
                h1 Mostrar los contactos

                .row.gap-1
                    each contacto in contactos
                        .col
                            .card
                                .card-header.text-center= contacto.nombre
                                .card-body
                                    h5.card-title=contacto.telefono
                                    p.card-text= contacto.descripcion
                                    .d-flex.gap-2
                                        a.btn.btn-primary( onclick="") Editar
                                        a.btn.btn-primary(onclick="confirmateDelete('/agenda-contacto')" data-id=`${contacto._id}`) Eliminar
